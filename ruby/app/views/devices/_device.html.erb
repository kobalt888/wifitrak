<div id=device_<%= device.id %>> 
<%= turbo_stream_from "devices" %>
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        <%= device.name %>
      </p>
      <button class="card-header-icon" aria-label="more options">
        <span class="icon">
          <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
      </button>
    </header>
    <div class="card-content">
      <div class="content">
        <div class="block">
          Location: <strong><%= device.location %></strong>
        </div>
        <div class="block">
          Last Updated: <time><%= device.updated_at %></time>
        </div>
        
      </div>
    </div>
  </div>
</div>
